@model IEnumerable<Hotel.Domain.Entities.Room>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountOfPeople)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomClass)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomState)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountOfPeople)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.RoomClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomState)

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RoomId }) |
                @Html.ActionLink("Details", "Details", new { id = item.RoomId }) |
